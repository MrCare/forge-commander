{
  "name": "forge-commander",
  "displayName": "forge commander",
  "description": "deploy contract easily with forge",
  "publisher": "MrCar",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:forge-deploy.helloWorld",
    "onCommand:forge-deploy.deployContract",
    "onCommand:forge-deploy.executeScript"
  ],
  "contributes": {
    "commands": [
      {
        "command": "forge-deploy.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "forge-deploy.deployContract",
        "title": "部署智能合约",
        "category": "Forge Deploy"
      },
      {
        "command": "forge-deploy.clearTerminal",
        "title": "清理 Forge 终端",
        "category": "Forge Deploy"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "forge-deploy.deployContract",
          "when": "resourceExtname == .sol",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "forge-deploy.clearTerminal",
          "when": "true"
      }
    ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "1.75.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrCare/forge-commander"
  },
  "icon": "icon.png"
}
